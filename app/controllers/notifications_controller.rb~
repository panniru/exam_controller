class NotificationsController < ApplicationController
  def new
    @notification = Notification.new
    respond_to do |notification| 
      notification.html.haml
      notification.xml { render :xml => @notification } 
    end
    
  def create
    @notification = Notification.new(params[:notification]) 
    respond_to do |notification| 
      if @notification.save
        flash[:notice] = 'Notification was successfully created.'
        notification.html { redirect_to(@notification) }
        notification.xml { render :xml => @notification, :status => :created, :location => @notification }
      else 
        notification.html { render :action => "new" }
        notification.xml { render :xml => @notification.errors, :status => :unprocessable_entity }
      end
    end
  end
  def edit
  end

  def show
  end

  def destroy
  end

  def index
    @notifications = Notification.find(:all)
    respond_to do |index| 
      index.html.haml
      index.xml { render :xml => @notifications }
    end
  end
end
