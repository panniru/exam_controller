= form_tag documents_path, :method => 'get' , :class => "form-inline" do
  .form-group.col-md-4
    = autocomplete_field_tag :search_term,
    '',
    auto_search_autocomplete_document_filename_path,
    :placeholder => "Search", :class => 'form-control', 
    :id_element => "#search"
    = hidden_field_tag :search, :id => "search"
  = submit_tag "Search", :name => nil, :class => "btn-primary btn"
  - if current_user.present? and current_user.admin?
    = link_to "Upload Document", new_document_path, :class => "btn btn-primary"
  


