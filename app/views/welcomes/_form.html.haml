= form_for @welcome, :html => { :class => "form-horizontal", :role => "form" } do |f|
  = render "shared/error_messages", :object => f.object
  .col-sm-8
    .form-group
      = f.label "Heading", :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :heading, :class => 'form-control'
    .form-group
      = f.label "message", :class => 'col-sm-2 control-label'
      .col-sm-10
        = f.text_area :message, :class => 'form-control'
  .col-sm-8.col-sm-offset-2
    = f.submit "Save", :class => "btn-primary btn"
    = link_to 'Show', root_path, :class => 'btn btn-info'
    = link_to 'Cancel', welcomes_path, :class => 'btn btn-primary'
    
    
