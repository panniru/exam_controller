#rbvrr-gallery.carousel.slide{:data => {:ride => "carousel"}}
  %ol.carousel-indicators
    %li{:data => {:target => "#rbvrr-gallery", "slide-to".to_sym => "0"} , :class => "active"}
    %li{:data => {:target => "#rbvrr-gallery", "slide-to".to_sym => "1"}}
    %li{:data => {:target => "#rbvrr-gallery", "slide-to".to_sym => "2"}}
  .carousel-inner
    .item.active
      .col-sm-6
        = link_to image_tag("1.JPG", :class => "img-responsive"),"#"
      .col-sm-6
        = link_to image_tag("2.JPG", :class => "img-responsive"), "#"
    .item
      .col-sm-6
        = link_to image_tag("2.JPG", :class => "img-responsive"), "#"
      .col-sm-6
        = link_to image_tag("3.JPG", :class => "img-responsive"), "#"
    .item
      .col-sm-6
        = link_to image_tag("2.JPG", :class => "img-responsive"), "#"
      .col-sm-6
        = link_to image_tag("2.JPG", :class => "img-responsive"), "#"

  = link_to raw("<span class='glyphicon glyphicon-chevron-left'></span>"), "#rbvrr-gallery", :class => "left carousel-control", :data => {:slide => "prev"}
  = link_to raw("<span class='glyphicon glyphicon-chevron-right'></span>"), "#rbvrr-gallery", :class => "right carousel-control", :data => {:slide => "next"}
