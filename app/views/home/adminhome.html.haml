!!!
%html
  %body
    .container4
      .row
        %form.form-horizontal{role: "form"}
          #form-right.part
            #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
              / Wrapper for slides
              .carousel-inner
                .item.active
                  .holder.col-sm-8
                    = image_tag("1.JPG", size: "400x250", :class =>"img-rounded")
                .item
                  .holder.col-sm-8
                    = image_tag("2.JPG", size: "400x250", :class =>"img-rounded")
                .item
                  .holder.col-sm-8
                    = image_tag("3.JPG", size: "400x250", :class =>"img-rounded")
                .item
                  .holder.col-sm-8
                    = image_tag("4.JPG", size: "400x250", :class =>"img-rounded")
                .item
                  .holder.col-sm-8
                    = image_tag("5.JPG", size: "400x250", :class =>"img-rounded")
              .controllers.col-sm-8.col-xs-12
                / Controls
                %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-example-generic"}
                  %span.glyphicon.glyphicon-chevron-left
                %a.right.carousel-control{"data-slide" => "next", href: "#carousel-example-generic"}
                  %span.glyphicon.glyphicon-chevron-right
                / Indicators
                %ol.carousel-indicators
                  %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
                  %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
                  %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
                  %li{"data-slide-to" => "3", "data-target" => "#carousel-example-generic"}
                  %li{"data-slide-to" => "4", "data-target" => "#carousel-example-generic"}

  
                                     

          .container7
            
            %marquee{bgcolor: "#DEE2E3", direction: "up", height: "100%", loop: "true", onmouseout: "this.scrollAmount=2", onmouseover: "this.scrollAmount=0", scrollamount: "2", width: "100%"}
          #form-center.part
            %fieldset
              
            %br
            %br                   
            %br
            %br
            %br
            = render 'shared/pop'            
 
        
          #form-right.part
            = form_for Feedback.new do |f|
              %fieldset
                .col-md-12
                  %center
                    %h3.title-suggestion
                      Suggestion Box
                       
                = f.label "Name", :class => 'col-sm-2 control-label'
                .col-sm-2
                = f.text_field "name", placeholder: "Name"
                %br/
                = f.label "email", :class => 'col-sm-2 control-label'
                .col-sm-2
                = f.text_field "email", placeholder: "Email"
                %br/
                = f.label "description", :class => 'col-sm-2 control-label'
                .col-sm-2
                = f.text_area "description", placeholder: "Description", rows: "3"
                %br/
                .wrapper
                .col-sm-8.pull-right    
                  = f.submit "Save", :class => 'btn btn-primary'
                  %br/                
                  %br/
          
             
