= form_tag how_tos_path, :method => 'get' , :class => "form-inline" do
  .form-group.col-md-6
    = autocomplete_field_tag :search_term,
    '',
    auto_search_autocomplete_how_to_name_path,
    :placeholder => "Keyword", :class => 'form-control',
    :id_element => "#search"
    = hidden_field_tag :search, :id => "search"
  = submit_tag "Search", :name => nil, :class => "btn-primary btn"
  - if can? :create, HowTo
    = link_to "Add New", new_how_to_path, :class => "btn-primary btn"
