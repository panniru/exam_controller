= form_for @notification, :html => { :class => "form-horizontal", :role => "form" } do |f|
  = render "shared/error_messages", :object => f.object
  .col-sm-8
    .form-group
      = f.label "Event", :class => 'col-sm-1 control-label'
      
      = f.text_field :event, :class => ' form-control'
    .form-group
      = f.label "Description", :class => 'col-sm-1 control-label'
      
      = f.text_area :description, :class => ' form-control'
    
    = f.submit "Save", :class => "btn-primary btn"
